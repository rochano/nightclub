<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
  <title>Shop - Home</title>
  
  <%@include file="/common/common_shop_header.jsp" %>

</head>
<body>
<!-- Sidebar Menu -->
<div class="ui vertical inverted sidebar menu">
	<%@include file="/common/common_shop_menu.jsp" %>
</div>
<div class="pusher">
	<div class="ui segment very basic inverted">
		<div class="ui grid"> 
			<div class="two wide column"></div>
			<div class="twelve wide column">
				<%@include file="/common/common_shop_header_info.jsp" %>
				<div class="ui menu inverted stackable">
					<a class="toc item"><i class="sidebar icon"></i></a>
					<%@include file="/common/common_shop_menu.jsp" %>
				</div>
				
				<h4 class="ui top attached header inverted">
					<s:text name="global.shop_menu_home" />
				</h4>
				<div class="ui grid attached segment inverted">
					<div class="column one left aligned">
						<s:text name="shop.description" />
					</div>
				</div>
				<h4 class="ui top attached header inverted">
					<s:text name="global.shop_event" />
				</h4>
				<div class="ui centered grid attached segment inverted">
					<div class="column one left aligned">
						<s:iterator value="eventInfos" status="status">
							<span>[<s:date name="eventDate" format="dd/MM/yyyy" />&nbsp;<s:property value="eventTime" />]</span>
							<span><a href="<s:url value="/shop/"/><s:property value="shopCode" />/event/<s:property value="eventInfoId" />"><s:property value="title" /></a></span><br />
						</s:iterator>
					</div>
				</div>
			</div>
			<div class="two wide column"></div>
		</div>
	  
	</div>
</div>
</body>
</html>